[push]
	default = simple
	gpgSign = if-asked
	autoSetupRemote = true


[commit]
	gpgsign = true

[core]
	editor = code --wait
	# Global ignore file (not shared)
  	excludesfile = ~/.gitignore_global

[diff]
	tool = vscode
[difftool "vscode"]
	cmd = code --wait --diff $LOCAL $REMOTE

[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = code --wait $MERGED

[includeIf "gitdir:~/Work/"]
	path = ~/Work/.gitconfig_include
[fetch]
	prune = true
[init]
	defaultBranch = main


