syntax enable
set autoindent
set expandtab
let python_highlight_all = 1
set nowrap
set number
set updatetime=250
set foldmethod=syntax
set background=dark
set wildmenu
set ruler
set backspace=indent,eol,start
set ignorecase 
set smartcase
set hlsearch 
set incsearch 
set cmdheight=2
set history=1000
set title
set magic 
set showmatch 
set shiftwidth=8
set tabstop=8
set smarttab
set laststatus=2
set ts=4

" Start :NERDTree when Vim starts with a directory argument.
autocmd StdinReadPre * let s:std_in=1
autocmd VimEnter * if argc() == 1 && isdirectory(argv()[0]) && !exists('s:std_in') |
    \ execute 'NERDTree' argv()[0] | wincmd p | enew | execute 'cd '.argv()[0] | endif
