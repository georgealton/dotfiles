auto-reload yes
reload-time 10
reload-threads 100
refresh-on-startup yes
reload-threads 100
show-read-feeds yes
show-read-articles yes
confirm-exit no
feed-sort-order none

include /usr/share/doc/newsboat/contrib/colorschemes/kinda-maia

## keybindings
unbind-key j
unbind-key k

## rebinding
bind-key j down
bind-key k up

# highlights
highlight article "^(Feed|Link):.*$" color6 default bold
highlight article "^(Title|Date|Author):.*$" color6 default bold
highlight article "https?://[^ ]+" color10 default underline
highlight article "\\[[0-9]+\\]" color10 default bold
highlight article "\\[image\\ [0-9]+\\]" color10 default bold

highlight feedlist "---.*---" green black bold

feedlist-title-format "%N Feed List"
feedlist-format "%?n?+%U&? %t"

articlelist-title-format "%T (%u unread)"
articlelist-format "%D - %t"

notify-program "/bin/notify-send"
browser "$BROWSER --new-window"
show-keymap-hint no
